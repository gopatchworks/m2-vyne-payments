<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
	<default>
		<payment>
			<vyne>
				<active>1</active>
				<environment>development</environment>
				<media_type>URL</media_type>
                <destination_account>GBP2</destination_account>
				<model>Vyne\Payments\Model\Payment\Vyne</model>
				<order_status>processing</order_status>
				<title>Vyne</title>
				<allowspecific>0</allowspecific>
				<colour_scheme>Light</colour_scheme>
                <promotion>1</promotion>
                <promo_text_1>Card not in hand?</promo_text_1>
                <promo_text_2>Checkout securely with your bank</promo_text_2>
                <sort_order>0</sort_order>
			</vyne>
		</payment>
	</default>
</config>
